@model MovieViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name"viewport" content="width=device-width" />
    <title>Movie</title>
</head>
<body>
    <h2>@ViewBag.Header</h2>
    <div class="card m-1" style="width:460px;">
        <div class="card-body">
            <div class="row m-1">
                <div class="m-1">
                    <h4 class="card-title">@Model.Name</h4>
                    <h6 class="card-text">@Model.ReleaseDate</h6>
                </div>
                <div class="m-1">
                    <h4>@Html.ActionLink("Like!", "Likes", new { id = Model.Id })</h4>
                </div>
            </div>
            <div style="align-content:center">
                <img src="@Model.Image" width="418" height="620" alt="Poster" />
            </div>
            <h4>@Html.ActionLink("Director", "Director", new { id = Model.Id })</h4>
            <h5 class="card-text m-3">@Model.ShortDescription</h5>
            <h6 class="m-2">Description</h6>
            <p class="card-text m-1 card-body">@Model.Description</p>
        </div>
    </div>
</body>
</html>
